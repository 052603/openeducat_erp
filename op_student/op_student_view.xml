<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<record id="view_op_student_tree" model="ir.ui.view">
			<field name="name">op.student.tree</field>
			<field name="model">op.student</field>
			<field name="type">tree</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<tree string="Student">
					<field name="roll_number" />
					<field name="title" />
					<field name="name" />
					<field name="middle_name" />
					<field name="last_name" />
					<field name="blood_group" />
					<field name="category" />
					<field name="library_card" />
					<field name="emergency_contact" />
					<field name="id_number" />
					<field name="course_id" />
					<field name="batch_id" />
					<field name="standard_id" />
				</tree>
			</field>
		</record>

		<record id="view_op_student_form" model="ir.ui.view">
			<field name="name">op.student.form</field>
			<field name="model">op.student</field>
			<field name="type">form</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<form string="Student" version="7.0">
				  <sheet>
					<field name="photo" widget="image" class="oe_left oe_avatar" />
					<div class="oe_title">
						<h1>
							<field name="title" placeholder="Title" style="width: 30%%" />
						</h1>
						<h1>
							<field name="name" placeholder="First Name" style="width: 30%%" />
							<field name="middle_name" placeholder="Middle Name" style="width: 10%%" />
							<field name="last_name" placeholder="Last Name" style="width: 20%%" />
						</h1>
					</div>
					<separator colspan="4" string="Basic Information" />
						<group col="6" colspan="4">
							<field name="gender" />
							<field name="birth_date" />
							<field name="id_number" />
							<field name="roll_number" />
						</group>
						<field colspan="4" name="address" nolabel="1" select="1"
									height="260">
							<form string="Partner Contacts">
								<group colspan="4" col="6">
									<field name="name" string="Contact Name" />
									<field domain="[('domain', '=', 'contact')]" name="title"
										size="0" />
									<field name="function" />
								</group>
								<newline />
								<group colspan="2" col="4">
									<separator string="Postal Address" colspan="4" col="4" />
									<field name="type" string="Type" colspan="2" />
									<field name="street" colspan="4" />
									<field name="street2" colspan="4" />
									<field name="zip" />
									<field name="city" />
									<field name="country_id" completion="1" />
									<field name="state_id" />
								</group>
								<group colspan="2" col="2">
									<separator string="Communication" colspan="2" col="2" />
									<field name="phone" />
									<field name="mobile" />
									<field name="fax" />
									<field name="email" widget="email" />
								</group>
							</form>
							<tree string="Partner Contacts">
								<field name="name" />
								<field name="zip" />
								<field name="city" />
								<field name="country_id" />
								<field name="phone" />
								<field name="email" />
							</tree>
						</field>
					<notebook colspan="4">
						<page string="Details">
							<separator colspan="4" string="Personal Detail" />
							<group col="4" colspan="4">
								<field name="category" />
								<field name="religion" />
								<field name="nationality" />
								<field name="language" />
								<field name="blood_group" />
								<field name="pan_card" />
								<field name="bank_acc_num" />
								<field name="visa_info" />
								<field name="emergency_contact" />
							</group>
						</page>
						<page string="Educational">
							<separator colspan="4" string="Educational Detail" />
							<group col="4" colspan="4">
								<field name="course_id" />
								<field name="standard_id" />
								<field name="batch_id" />
								<field name="division_id" />
								
								<field name="roll_number_line" colspan="4" nolabel="1"
									context="{'default_course_id':course_id,
                                     'default_batch_id':batch_id,
                                     'default_standard_id':standard_id,
                                     'default_division_id':division_id}" />


							</group>
						</page>
						<page string="Assignments">
							<separator string="Assignment" colspan="4" />
							<field name="allocation_ids" colspan="4" nolabel="1" />
						</page>
						<page string="Library">
							<separator string="Library Detail" colspan="4" />
							<field name="library_card_ids" colspan="4" nolabel="1" />
						</page>
						<!-- <group colspan="4"> -->
						<!-- <button name="create_invoice" string="Create Invoice" -->
						<!-- type="object" icon="gtk-apply" /> -->
						<!-- </group> -->
					</notebook>
				  </sheet>
				</form>
			</field>
		</record>

		<record id="view_op_student_search" model="ir.ui.view">
			<field name="name">op.student.search</field>
			<field name="model">op.student</field>
			<field name="type">search</field>
			<field name="priority" eval="8" />
			<field name="arch" type="xml">
				<search string="Student">
					<field name="name" />
					<field name="blood_group" />
					<field name="category" />
					<field name="id_number" />
					<field name="course_id" />
					<field name="batch_id" />
					<field name="standard_id" />
					<newline />
					<group expand="0" string="Group By...">
						<filter string="Blood Group" domain="[]"
							context="{'group_by':'blood_group'}" />
						<filter string="Nationality" domain="[]"
							context="{'group_by':'nationality'}" />
						<filter string="Language" domain="[]" context="{'group_by':'language'}" />
						<filter string="Category" domain="[]" context="{'group_by':'category'}" />
						<filter string="Religion" domain="[]" context="{'group_by':'religion'}" />
						<filter string="Course" domain="[]" context="{'group_by':'course_id'}" />
						<filter string="Batch" domain="[]" context="{'group_by':'batch_id'}" />
						<filter string="Standard" domain="[]"
							context="{'group_by':'standard_id'}" />
					</group>
				</search>
			</field>
		</record>

		<record model="ir.actions.act_window" id="act_open_op_student_view">
			<field name="name">Student</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">op.student</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
			<field name="search_view_id" ref="view_op_student_search" />
			<field name="domain">[]</field>
			<field name="context">{}</field>
		</record>

		<record model="ir.actions.act_window.view" id="act_open_op_student_view_form">
			<field name="act_window_id" ref="act_open_op_student_view" />
			<field name="sequence" eval="20" />
			<field name="view_mode">form</field>
			<field name="view_id" ref="view_op_student_form" />
		</record>

		<record model="ir.actions.act_window.view" id="act_open_op_student_view_tree">
			<field name="act_window_id" ref="act_open_op_student_view" />
			<field name="sequence" eval="10" />
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_op_student_tree" />
		</record>


	</data>
</openerp>
