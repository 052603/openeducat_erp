<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record id="view_op_student_form_fees_inherit" model="ir.ui.view">
            <field name="name">op.student.form.fees.inherit</field>
            <field name="model">op.student</field>
            <field name="inherit_id" ref="openeducat_core.view_op_student_form" />
            <field name="priority" eval="9" />
            <field name="arch" type="xml">
                <sheet position="before">
                    <header groups="openeducat_core.group_op_back_office_admin,openeducat_core.group_op_back_office">
                        <button name="create_invoice" string="Create Invoice" type="object" class="oe_highlight" attrs="{'invisible': [('invoice_exists', '=', True)]}"/>
                        <button name="action_view_invoice" string="View Invoice" type="object" class="oe_highlight" attrs="{'invisible': [('invoice_exists', '=', False)]}"/>
                    </header>
                </sheet>
                <div name="div_address" position="after">
                    <field name="invoice_exists" invisible="1" readonly="0"/>
                </div>
            </field>
        </record>
    </data>
</openerp>